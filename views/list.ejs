<%- include('header') %>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
            <% items.forEach(function(newItem) { %>
                <div class="item">
                     <input type="checkbox">
                    <p><%= newItem %></p>
                </div>
            <% }); %>
        <form class="item" action="/" method="POST">
            <input type="text" name="item" placeholder="new item" required>
            <button type="submit" name="list" value='<%= listTitle %>'>+</button>
        </form>
    </div>

<%- include('footer') %>